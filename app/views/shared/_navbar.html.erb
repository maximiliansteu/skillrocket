<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
 <div class="container">
    <%= link_to root_path, class: "navbar-brand" do%>
      <%= image_tag 'skillrocket-logo.png' %>
    <% end %>

  <div class="collapse navbar-collapse" id="container-nav-category">
    <ul class="navbar-nav mr-auto" >
      <li class="nav-item active">
        <%= link_to "All Courses", courses_path, class: "nav-link"%>
      </li>
      <li class="nav-item active">
        <%= link_to "Categories", categories_path, class: "nav-link" %>
      </li>
      <% unless params[:action] == "home" %>
       <li class="nav-item active">
       <%= form_tag courses_path, method: :get, class:"maxi-search-bar-home" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "maxi-form-control-home", id:"maxi-form-control-nav",
          placeholder: "   Find a course"
        %>
        <%= text_field_tag :location,
        params[:location],
        class: "maxi-form-control-nav-location maxi-form-control-home-location",
        placeholder: "   Search for location"
        %>
        <%= submit_tag "Search", class: "button" %>
      <% end %>
      </li>
    <% end %>
    </ul>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto" id="maxi-list-avatar">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "+ Add course", new_course_path, class: "maxi-nav-link button", title: "Create yout own course" %>
        </li>
        <li class="nav-item">
          <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "All courses", courses_path, class: "dropdown-item" %>
            <%= link_to "Categories", categories_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link", title: "Login" %>
        </li>
      <% end %>
    </ul>
  </div>
  </div>
</div>
