<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
 <div class="container">
    <%= link_to root_path, class: "navbar-brand" do%>
      <%= image_tag 'skillrocket-logo.png' %>
    <% end %>

    <div class="collapse navbar-collapse" id="container-nav-category">
      <ul class="navbar-nav mr-auto" >
        <li class="nav-item">
          <%= link_to "All Courses", courses_path, class: "nav-link", title: "See all courses" %>
        </li>
        <li class="nav-item">
          <%= link_to "Categories", courses_path, class: "nav-link", title: "See all categories" %>
        </li>
        <li class="nav-item">
          <%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline' } do |f| %>
          <%= f.input :search, input_html: {value: "Search courses"}, label: false %>
          <%= f.submit "Search", class: "button" %>
        </li>
      </ul>

        <% end %>
    </div>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Become a teacher!", new_course_path, class: "nav-link button", title: "Create yout own course" %>
          </li>
          <li class="nav-item">
            <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Action", "#", class: "dropdown-item" %>
              <%= link_to "Another action", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link", title: "Login" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
