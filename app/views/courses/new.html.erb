<div class="container-new">
  <div class="column">
    <img src="https://image.freepik.com/free-vector/team-work-business-solve-puzzles-find-ideas_4968-469.jpg" class="form-image" alt="">
  </div>
  <div class="column">
    <h1>ADD A NEW COURSE</h1>
    <div class="container-form">
      <%= simple_form_for [ @course ] do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :category, collection: Course::CATEGORIES %>
        <%= f.input :content, as: :text, :input_html => { :cols => 5, :rows => 5 }  %>
        <%= f.input :location %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Add course", class: "button" %>
      <% end %>

      <div class="button">
        <%= link_to 'Back to courses', courses_path %>
      </div>
    </div>
  </div>
</div>
